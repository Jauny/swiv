<div class="hero-unit">
  <h2>FIND ALL THE SHOWS!</h2>

  <table class="table table-striped table-hover table-condensed">

    <thead>
        <tr>
          <th width="20%">Name</th>
          <th width="80%">Overview</th>
        </tr>
      </thead>

      <tbody>
        <% @shows.each do |show| %>
          <tr>
            <td><%= link_to show["SeriesName"], show_path(show["id"]) %></td>
            <td><%= show["Overview"] %></td>
          </tr>
        <% end %>

      </tbody>

  </table>
</div>
