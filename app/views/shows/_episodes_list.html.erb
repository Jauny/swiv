<% @show.seasons.each do |season| %>
    <table class="table table-striped table-hover table-condensed" <%= "id=#{season.number}" %>>
      <caption>
        Season <%= season.number %>
        <!-- <%= render :partial => 'shows/all_seen', :locals => { season: season } %> -->
      </caption>
      <thead>
        <tr>
          <th width="2%">#</th>
          <th width="20%">Title</th>
          <th width="63%">Plot</th>
          <th width="10%">Air time</th>
          <th width="5%">Status</th>
        </tr>
      </thead>
      <tbody>
        <% season.episodes.each do |ep| %>
          <% if @user && ep.seen?(@user) %>
            <tr class="success">
          <% else %>
            <tr>
          <% end %>
            <td><%= ep.number %></td>
            <td><%= ep.name %></td>
            <td><%= ep.plot %></td>
            <td><%= ep.air_date %></td>
            <%= render :partial => 'status_icon', :locals => { ep: ep } %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
