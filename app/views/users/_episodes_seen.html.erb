<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th width="2%">#</th>
      <th width="20%">Title</th>
      <th width="63%">Plot</th>
      <th width="15%">Air time</th>
    </tr>
  </thead>

  <tbody>
    <% @user.episodes.each do |ep| %>
        <tr>
        <td><%= ep.number %></td>
        <td><%= ep.name %></td>
        <td><%= ep.plot %></td>
        <td><%= ep.air_date %></td>
      </tr>
    <% end %>
  </tbody>

</table>
